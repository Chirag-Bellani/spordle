<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">192.168.1.10</domain> <!-- Replace with your actual IP -->
        <domain includeSubdomains="true">192.168.0.100</domain> <!-- Add your IP variations -->
    </domain-config>
    
    <!-- For development, allow all cleartext traffic (not recommended for production) -->
    <!-- Uncomment the line below only if above doesn't work -->
    <!-- <base-config cleartextTrafficPermitted="true" /> -->
</network-security-config>